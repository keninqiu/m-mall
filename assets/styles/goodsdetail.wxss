.detail-bottom {
  width: 100%;
  border-top: 1px solid #ededed;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 1001;
}

.detail-bottom .bottom-box {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    position: relative;
}

.detail-bottom .bottom-box .contact {
      width: 100rpx;
      height: 80rpx;
      margin: 0 auto;
      position: absolute;
      text-align: center;
      line-height: 80rpx;
      left: 100rpx;
      opacity: 0;
}

.detail-bottom .sy-bottom {
    padding: 15rpx 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
}

.detail-bottom .btn_order {
    background: #ff4856;
    color: #fff;
}

.detail-bottom .btn_cart {
    color: #fff;
    background: #ff6e30;
}

.detail-bottom .order_color {
    background: #A9A9A9;
    color: #fff;
}

.detail-bottom .cart_color {
    color: #fff;
    background: #A9A9A9;
}

.detail-bottom .item:first-child {
    border-right: 1px solid #efefef;
}

.detail-bottom .item {
    flex: 1;
    text-align: center;
}

.detail-bottom .item .doc {
      font-size: 24rpx;
}

.detail-bottom .selec_active .doc {
      color: #ff4856;
}

.detail-bottom .selec_active .iconfont {
      color: #ff4856;
}
